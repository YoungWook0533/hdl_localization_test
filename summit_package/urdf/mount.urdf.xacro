<?xml version="1.0" encoding="utf-8"?>
<robot name="mount" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Properties -->
  <xacro:property name="mass_mount" value="0.877379173528852" />
  <xacro:property name="ixx_mount" value="0.00358174843161325" />
  <xacro:property name="ixy_mount" value="1.36945636049963E-18" />
  <xacro:property name="ixz_mount" value="-2.59431781095676E-18" />
  <xacro:property name="iyy_mount" value="0.00908997091360066" />
  <xacro:property name="iyz_mount" value="0.00107704774721428" />
