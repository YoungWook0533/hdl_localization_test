  <!-- Macro for the mount -->
  <xacro:macro name="mount" params="parent">
    <link name="mount">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="${mass_mount}" />
        <inertia ixx="${ixx_mount}" ixy="${ixy_mount}" ixz="${ixz_mount}" iyy="${iyy_mount}" iyz="${iyz_mount}" izz="${izz_mount}" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://summit_package/meshes/mount.STL" />
        </geometry>
        <material name="">
          <color rgba="${color_rgba_mount}" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://summit_package/meshes/mount.STL" />
        </geometry>
      </collision>
    </link>
    <joint name="mount_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="mount"/>
      <origin xyz="0.415 0.03 0.39" rpy="0 0 1.57"/>
    </joint>
  </xacro:macro>

</robot>
